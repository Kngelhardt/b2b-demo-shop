{% extends model('component') %}

{% define config = {
    name: 'social-media',
    tag: 'section'
} %}

{% define data = {
    product: required,
    shopUrl: app.request.getSchemeAndHttpHost()
} %}

{% block body %}
    <div class="{{ config.name }}__container grid grid--gap-smaller">
        <div class="fb-share-button" data-href="http://yves.us.spryker.local/en/" data-layout="" data-size="">
            <a target="_blank"
               href="https://www.facebook.com/sharer/sharer.php?u={{ data.shopUrl ~ data.product.url | url_encode }}&amp;src=sdkpreparse"
               class="{{ config.name }}__icon">
                <img class="{{ config.name }}__icon" src="{{ publicPath('images/logo-facebook.png') }}" alt="facebook logo">
            </a>
        </div>

        <a target="_blank" href="https://www.linkedin.com/shareArticle?originalUrl={{ data.shopUrl ~ data.product.url | url_encode }}&shareMediaCategory=ARTICLE">
            <img class="{{ config.name }}__icon" src="{{ publicPath('images/logo-linkedin.png') }}" alt="linked-in logo">
        </a>
    </div>
{% endblock %}
